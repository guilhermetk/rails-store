<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Products", products_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="md:flex">
      <div class="md:w-1/3 p-6">
        <%= if @product.featured_image.attached?
          image_tag @product.featured_image, class: "w-full h-64 object-cover rounded-lg"
        else
          content_tag :div, "No image", class: "w-full h-64 bg-gray-200 rounded-lg flex items-center justify-center text-gray-500"
        end %>
      </div>

      <div class="md:w-2/3 p-6">
        <% cache @product do %>
          <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @product.name %></h1>
          <div class="text-gray-700 mb-6 prose">
            <%= @product.description %>
          </div>
        <% end %>

        <%= render "inventory", product: @product %>

        <div class="mt-6 flex space-x-4">
          <%= link_to "Back", products_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-2 px-4 rounded-md" %>
          <%= link_to "Edit", edit_product_path(@product), class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md" if authenticated? %>
        </div>
      </div>
    </div>
  </div>
</div>
