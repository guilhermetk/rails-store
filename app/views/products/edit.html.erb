<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white shadow-lg rounded-lg p-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Edit product</h1>

    <%= render "form", product: @product %>

    <div class="mt-6 flex justify-between items-center">
      <div>
        <%= link_to "Cancel", products_path, class: "text-gray-600 hover:text-gray-800 font-medium" %>
      </div>
      <div>
        <%= button_to "Delete",
        @product,
        method: :delete,
        class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md",
        data: {
          turbo_confirm: "Are you sure?",
        } %>
      </div>
    </div>
  </div>
</div>
